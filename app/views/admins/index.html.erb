<div class = "Admin_View">
  <h1>Admin Console</h1>
  <div class = "Users">
    <h2>Users</h2>
    <% @users.each do |f| %>
    <ul>
      <li>Registration for <%= link_to f.username, edit_user_registration_path(f) %></li>
      <li>Additional info <%= link_to f.username, edit_user_path(f) %>
    </ul>
    <%end%>
  </div>

  <p></p>

  <div class="Bars">
    <h2>Bars</h2>
    <% if Business.dbEmpty %>
      <strong> No businesses on file </strong>
      <% else %>
       <p>
        <ol>
        <% @businesses.each do |f| %>
          <li>Bar Name: <%= link_to f.name, f%></li>
        <%end%>
        </ol>
     <%end%>
    <div class = "New_Bar">
      <%= link_to "Add Bar", new_business_path%>
    </div>
  </div>

  <p></p>
  <div class="Contests">
    <h2>Contests</h2>
    <% if Contest.first.nil? && Prize.first.nil? %>
      <strong> No contests on file. You must first create a prize before adding a contest. </strong>
    <% elsif Prize.first.nil? %>
      <strong> No prizes on file. You must add a prize. </strong>
    <% else %>
      <ol>
      <% @contests.each do |c| %>
         <li>Contest Name: <%= link_to c.name, c%></li>
      <%end%>
      <div class = "New_Contest">
        <%= link_to "Add Contest", new_contest_path%>
      </div>
      </ol>
    <%end%>

  </div>

  <div class="Prizes">
    <h2>Prizes</h2>
    <% if Prize.first.nil? %>
      <strong> No prizes on file </strong>
    <% else %>
      <ol>
      <% @prizes.each do |p| %>
         <li>Prize Name: <%= link_to p.name, prize_path(p) %></li>
      <%end%>
      </ol>
    <%end%>
    <div class = "New_Prize">
      <%= link_to "Add Prize", new_prize_path%>
    </div>
  </div>


</div>
