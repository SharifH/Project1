
<% if current_user.bartender %>
  <h1>Bartender Management System </h1>
  <%=link_to "manage contests", contests_path %>
  <div class="span9">
    <% cache "timelines#{Date.today}" do %>
      <% @tweets.each do |timeline| %>
        <blockquote><%= timeline.text %></blockquote>
        <div class="from">&mdash; @<%= timeline.user[:screen_name] %></div>
        <% end %>
  </div>
  <%end%>


<%else%>
  <h1>Check-in</h1>
  <p> Here is a list of all bars in your area.  Check in to one. </p>
  <ol>
    <% Business.all.each do |x| %>
    <li><%=link_to x.name, business_path(x)%></li>
    <%end%>
  </ol>
<%end%>
</div>


